service amanda
{
    disable          = no
    socket_type      = dgram
    protocol         = udp
    wait             = yes
    user             = <%= user %>
    group            = <%= group %>
    groups           = yes
    server           = <%= libexecdir %>/amandad 
}

service amandaidx
{
    disable          = no
    socket_type      = stream
    protocol         = tcp
    wait             = no
    user             = <%= user %>
    group            = <%= group %>
    groups           = yes
    server           = <%= libexecdir %>/amindexd 
} 

